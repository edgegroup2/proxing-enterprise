app.get("/api/funding/ping", (req, res) => {
  res.json({ ok: true, router: "funding" });
});

app.post("/api/funding/initiate", async (req, res) => {
  try {
    const { userId, amount } = req.body;

    if (!userId || !amount) {
      return res.status(400).json({
        error: "userId and amount required",
      });
    }

    const reference = "FD-" + uuidv4();

    const result = await pool.query(
      `
      INSERT INTO fundings (user_id, reference, amount, provider, status)
      VALUES ($1, $2, $3, $4, $5)
      RETURNING *
      `,
      [userId, reference, amount, "monnify", "pending"]
    );

    res.json({
      status: "ok",
      funding: result.rows[0],
    });
  } catch (err) {
    console.error("FUNDING ERROR:", err);
    res.status(500).json({ error: err.message });
  }
});

app.listen(4000, () => {
  console.log("Server running on 4000");
});
